<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zpdl.encryptionphoto.gridthumbnail.GridTnFragment" >

    <TextView
        android:id="@+id/gridtn_tv_path"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:singleLine="true"
        android:ellipsize="start" />

    <GridView
        android:id="@+id/gridtn_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/gridtn_margin"
        android:columnWidth="@dimen/gridtn_column_size"
        android:gravity="center"
        android:numColumns="auto_fit"
        android:stretchMode="spacingWidth" />

</RelativeLayout>
